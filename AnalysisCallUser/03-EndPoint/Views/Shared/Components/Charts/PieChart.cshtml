@model AnalysisCallUser._03_EndPoint.Models.ViewModels.Analytics.ChartDataViewModel

<div class="chart-container">
    <h4>@Model.ChartLabel</h4>
    <canvas id="pie-chart-@ViewData["ChartId"]" width="400" height="200"></canvas>
</div>

@section Scripts {
    <script src="~/lib/chartjs/dist/chart.min.js"></script>
    <script>
        const ctx@(ViewData["ChartId"]) = document.getElementById('pie-chart-@ViewData["ChartId"]').getContext('2d');
        const pieChart@(ViewData["ChartId"]) = new Chart(ctx@(ViewData["ChartId"]), {
            type: 'pie',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.Data.Select(d => d.Label))),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(Model.Data.Select(d => d.Value))),
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'right'
                    }
                }
            }
        });
    </script>
}