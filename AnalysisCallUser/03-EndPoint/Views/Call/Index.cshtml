@using AnalysisCallUser._01_Domain.Core.Enums
@model AnalysisCallUser._03_EndPoint.Models.ViewModels.Call.CallSearchViewModel

@{
    ViewData["Title"] = "لیست تماس‌ها";
}

<div class="call-list-container">
    <div class="page-header">
        <h3>لیست تماس‌ها</h3>
        <div class="page-actions">
            <a asp-action="Search" class="btn btn-primary">
                <i class="fas fa-search"></i> جستجوی پیشرفته
            </a>
        </div>
    </div>

    <div class="filter-summary">
        @if (Model.Filter != null && !string.IsNullOrEmpty(Model.Filter.ANumber))
        {
            <span class="filter-tag">
                شماره مبدأ: @Model.Filter.ANumber
                <button type="button" class="btn-close btn-close-sm" aria-label="Close"></button>
            </span>
        }
        @if (Model.Filter != null && !string.IsNullOrEmpty(Model.Filter.BNumber))
        {
            <span class="filter-tag">
                شماره مقصد: @Model.Filter.BNumber
                <button type="button" class="btn-close btn-close-sm" aria-label="Close"></button>
            </span>
        }
        @if (Model.Filter != null && Model.Filter.StartDate.HasValue)
        {
            <span class="filter-tag">
                از تاریخ: @Model.Filter.StartDate.Value.ToString("yyyy/MM/dd")
                <button type="button" class="btn-close btn-close-sm" aria-label="Close"></button>
            </span>
        }
        @if (Model.Filter != null && Model.Filter.EndDate.HasValue)
        {
            <span class="filter-tag">
                تا تاریخ: @Model.Filter.EndDate.Value.ToString("yyyy/MM/dd")
                <button type="button" class="btn-close btn-close-sm" aria-label="Close"></button>
            </span>
        }
        @if (Model.Filter != null && Model.Filter.OriginCountryID.HasValue)
        {
            <span class="filter-tag">
                کشور مبدأ: @Model.Filter.OriginCountryID
                <button type="button" class="btn-close btn-close-sm" aria-label="Close"></button>
            </span>
        }
        @if (Model.Filter != null && Model.Filter.DestCountryID.HasValue)
        {
            <span class="filter-tag">
                کشور مقصد: @Model.Filter.DestCountryID
                <button type="button" class="btn-close btn-close-sm" aria-label="Close"></button>
            </span>
        }
    </div>

    <div class="table-container">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>شماره مبدأ</th>
                    <th>شماره مقصد</th>
                    <th>تاریخ</th>
                    <th>زمان</th>
                    <th>مدت (ثانیه)</th>
                    <th>کشور مبدأ</th>
                    <th>کشور مقصد</th>
                    <th>وضعیت</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Results != null && Model.Results.Data.Any())
                {
                    @foreach (var call in Model.Results.Data)
                    {
                        <tr>
                            <td>@call.ANumber</td>
                            <td>@call.BNumber</td>
                            <td>@call.AccountingTime_Date.ToString("yyyy/MM/dd")</td>
                            <td>@call.AccountingTime_Time.ToString(@"hh\:mm\:ss")</td>
                            <td>@call.Length</td>
                            <td>@call.OriginCountryName</td>
                            <td>@call.DestCountryName</td>
                            <td>
                            <td>
                                @if (call.Answer == CallAnswerStatus.Answered)
                                {
                                    <span class="badge bg-success">پاسخ داده شده</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">پاسخ داده نشده</span>
                                }
                            </td>

                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@call.DetailID" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center">هیچ تماسی یافت نشد</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.Results != null)
    {
        <partial name="_Pagination" model="Model.Results" />
    }
</div>