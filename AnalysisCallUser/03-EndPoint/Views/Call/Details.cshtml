@using AnalysisCallUser._01_Domain.Core.Enums
@model AnalysisCallUser._03_EndPoint.Models.ViewModels.Call.CallDetailsViewModel

@{
    ViewData["Title"] = "جزئیات تماس";
}

<div class="call-details-container">
    <div class="page-header">
        <h3>جزئیات تماس</h3>
        <div class="page-actions">
            <a asp-action="Search" class="btn btn-secondary">
                <i class="fas fa-arrow-right"></i> بازگشت به جستجو
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>اطلاعات تماس</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <th width="30%">شناسه تماس:</th>
                            <td>@Model._dto.DetailID</td>
                        </tr>
                        <tr>
                            <th>شماره مبدأ:</th>
                            <td>@Model._dto.ANumber</td>
                        </tr>
                        <tr>
                            <th>شماره مقصد:</th>
                            <td>@Model._dto.BNumber</td>
                        </tr>
                        <tr>
                            <th>تاریخ:</th>
                            <td>@Model._dto.AccountingTime_Date.ToString("yyyy/MM/dd")</td>
                        </tr>
                        <tr>
                            <th>زمان:</th>
                            <td>@Model._dto.AccountingTime_Time.ToString(@"hh\:mm\:ss")</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <th width="30%">مدت تماس (ثانیه):</th>
                            <td>@Model._dto.Length</td>
                        </tr>
                        <tr>
                            <th>کشور مبدأ:</th>
                            <td>@Model._dto.OriginCountryName</td>
                        </tr>
                        <tr>
                            <th>کشور مقصد:</th>
                            <td>@Model._dto.DestCountryName</td>
                        </tr>
                        <tr>
                            <th>وضعیت پاسخ:</th>
                            <td>
                                @if (Model._dto.Answer == CallAnswerStatus.Answered)
                                {
                                    <span class="badge bg-success">پاسخ داده شده</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">پاسخ داده نشده</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>