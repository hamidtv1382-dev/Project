@using System.Globalization @* <-- اضافه شده برای استفاده از PersianCalendar *@
@model AnalysisCallUser._03_EndPoint.Models.ViewModels.Call.CallDetailsViewModel
@{
    ViewData["Title"] = "جزئیات تماس";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">جزئیات تماس</h4>
            <div>
                <a asp-action="ExportDetails" asp-route-id="@Model.DetailID" class="btn btn-success">
                    <i class="fas fa-file-export"></i> اکسپورت جزئیات
                </a>
                <a asp-action="Search" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> بازگشت به جستجو
                </a>
            </div>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">شناسه تماس:</dt>
                <dd class="col-sm-9">@Model.DetailID</dd>

                <dt class="col-sm-3">شماره مبدأ:</dt>
                <dd class="col-sm-9">@Model.ANumber</dd>

                <dt class="col-sm-3">شماره مقصد:</dt>
                <dd class="col-sm-9">@Model.BNumber</dd>

                <dt class="col-sm-3">زمان تماس:</dt>
                <dd class="col-sm-9">
                    @{
                        var pc = new PersianCalendar();
                        // تبدیل تاریخ میلادی به شمسی و فرمت‌دهی
                        string persianDateTime = $"{pc.GetYear(Model.AccountingTime)}/{pc.GetMonth(Model.AccountingTime):D2}/{pc.GetDayOfMonth(Model.AccountingTime):D2} {Model.AccountingTime:HH:mm:ss}";
                    }
                    @persianDateTime
                </dd>

                <dt class="col-sm-3">مدت زمان:</dt>
                <dd class="col-sm-9">@Model.Length ثانیه</dd>

                <dt class="col-sm-3">کشور مبدأ:</dt>
                <dd class="col-sm-9">@Model.OriginCountryName</dd>

                <dt class="col-sm-3">کشور مقصد:</dt>
                <dd class="col-sm-9">@Model.DestCountryName</dd>

                <dt class="col-sm-3">وضعیت:</dt>
                <dd class="col-sm-9">
                    @if (Model.Answer == AnalysisCallUser._01_Domain.Core.Enums.CallAnswerStatus.Answered)
                    {
                        <span class="badge bg-success fs-6">پاسخ داده شده</span>
                    }
                    else
                    {
                        <span class="badge bg-danger fs-6">پاسخ داده نشده</span>
                    }
                </dd>
                <div class="text-center mt-3">
                    <a asp-action="PlayVoice" asp-route-id="@Model.DetailID" class="btn btn-warning btn-lg" style="width: 120px; height: 50px; font-size: 1.2rem;">
                        <i class="fas fa-volume-up"></i>
                    </a>
                </div>
            </dl>
        </div>
    </div>
</div>