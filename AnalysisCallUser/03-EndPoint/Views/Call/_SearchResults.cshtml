@using AnalysisCallUser._01_Domain.Core.Enums
@model AnalysisCallUser._02_Infrastructure.Helpers.PagedResult<AnalysisCallUser._01_Domain.Core.DTOs.CallDetailDto>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>نتایج جستجو (<span id="totalCount">@Model.TotalCount</span> رکورد)</h4>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>شماره مبدأ</th>
                <th>شماره مقصد</th>
                <th>تاریخ و زمان</th>
                <th>مدت (ثانیه)</th>
                <th>کشور مبدأ</th>
                <th>کشور مقصد</th>
                <th>وضعیت</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Data.Any())
            {
                @foreach (var call in Model.Data)
                {
                    <tr>
                        <td>@call.ANumber</td>
                        <td>@call.BNumber</td>
                        <!-- تغییر نمایش تاریخ به شمسی با استفاده از ویژگی data برای تبدیل در سمت کلاینت -->
                        <td data-datetime="@call.AccountingTime.ToString("yyyy-MM-ddTHH:mm:ss")" class="datetime-cell">
                            @call.AccountingTime.ToString("yyyy/MM/dd HH:mm:ss")
                        </td>
                        <td>@call.Length</td>
                        <td>@call.OriginCountryName</td>
                        <td>@call.DestCountryName</td>
                        <td>
                            @if (call.Answer == CallAnswerStatus.Answered)
                            {
                                <span class="badge bg-success">پاسخ داده شده</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">پاسخ داده نشده</span>
                            }
                        </td>
                        <td style="min-width: 160px;">
                            @* افزایش حداقل عرض ستون برای نمایش تمام دکمه‌ها *@
                            <div class="d-flex gap-1 justify-content-center">
                                <a asp-action="Details" asp-route-id="@call.DetailID" class="btn btn-sm btn-outline-primary" title="نمایش جزئیات">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="ExportDetails" asp-route-id="@call.DetailID" class="btn btn-sm btn-outline-success" title="اکسپورت جزئیات">
                                    <i class="fas fa-file-export"></i>
                                </a>

                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center text-muted">هیچ تماسی یافت نشد</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@* نمایش بخش صفحه‌بندی اگر نتایج وجود داشته باشد *@
@if (Model != null && Model.TotalCount > 0)
{
    <partial name="_Pagination" model="Model" />
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // تابع برای تبدیل تاریخ‌ها به شمسی
            function convertDatesToPersian() {
                // پیدا کردن تمام عناصر حاوی تاریخ
                const dateElements = document.querySelectorAll('.datetime-cell');

                dateElements.forEach(element => {
                    // اگر عنصر دارای ویژگی data-datetime است
                    if (element.dataset.datetime) {
                        const date = new Date(element.dataset.datetime);
                        const persianDate = new persianDate(date).format('YYYY/MM/DD HH:mm:ss');
                        element.textContent = persianDate;
                    }
                });
            }

            // تبدیل تاریخ‌ها به شمسی پس از بارگذاری صفحه
            convertDatesToPersian();

            document.getElementById('export-search-results')?.addEventListener('click', function() {
                const form = document.getElementById('filter-form');
                const formData = new FormData(form);

                fetch('/Call/ExportSearchResults', {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                })
                .then(response => {
                    if (response.ok) return response.blob();
                    throw new Error('Network response was not ok.');
                })
                .then(blob => {
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.style.display = 'none';
                    a.href = url;
                    a.download = `CallSearchResults_${new Date().toISOString().slice(0,10)}.csv`;
                    document.body.appendChild(a);
                    a.click();
                    window.URL.revokeObjectURL(url);
                    document.body.removeChild(a);
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('خطا در اکسپورت کردن نتایج. لطفاً دوباره تلاش کنید.');
                });
            });
        });
    </script>
}