@model AnalysisCallUser._03_EndPoint.Models.ViewModels.Export.ExportHistoryViewModel

@{
    ViewData["Title"] = "تاریخچه خروجی‌ها";
}

<div class="export-history-container">
    <div class="page-header">
        <h3>تاریخچه خروجی‌ها</h3>
        <div class="page-actions">
            <button id="refresh-history" class="btn btn-outline-primary">
                <i class="fas fa-sync-alt"></i> به‌روزرسانی
            </button>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>خروجی‌های قبلی</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>شناسه</th>
                            <th>نام فایل</th>
                            <th>نوع خروجی</th>
                            <th>تعداد رکوردها</th>
                            <th>تاریخ درخواست</th>
                            <th>وضعیت</th>
                            <th>اندازه فایل</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Exports != null && Model.Exports.Any())
                        {
                            @foreach (var export in Model.Exports)
                            {
                                <tr>
                                    <td>@export.Id</td>
                                    <td>@export.FileName</td>
                                    <td>
                                        <span class="badge bg-info">@export.ExportType</span>
                                    </td>
                                    <td>@export.RecordCount.ToString("N0")</td>
                                    <td>@export.RequestDate.ToString("yyyy/MM/dd HH:mm:ss")</td>
                                    <td>
                                        @if (export.IsCompleted)
                                        {
                                            <span class="badge bg-success">آماده</span>
                                        }
                                        else if (export.IsFailed)
                                        {
                                            <span class="badge bg-danger">ناموفق</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">در حال پردازش</span>
                                        }
                                    </td>
                                    <td>
                                        @if (export.FileSize.HasValue)
                                        {
                                            @FormatFileSize(export.FileSize.Value)
                                        }
                                        else
                                        {
                                            <span class="text-muted">---</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            @if (export.IsCompleted && !string.IsNullOrEmpty(export.FilePath))
                                            {
                                                <a href="@export.FilePath" class="btn btn-sm btn-outline-success" download>
                                                    <i class="fas fa-download"></i>
                                                </a>
                                            }
                                            <button type="button" class="btn btn-sm btn-outline-info view-export-details" data-id="@export.Id">
                                                <i class="fas fa-info-circle"></i>
                                            </button>
                                            @if (!export.IsCompleted && !export.IsFailed)
                                            {
                                                <button type="button" class="btn btn-sm btn-outline-warning cancel-export" data-id="@export.Id">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">هیچ خروجی یافت نشد</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exportDetailsModal" tabindex="-1" role="dialog" aria-labelledby="exportDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exportDetailsModalLabel">جزئیات خروجی</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="export-details-content">
                    <!-- جزئیات خروجی به صورت داینامیک اضافه می‌شوند -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>

@functions {
    public string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}

@section Scripts {
    <script>
        // رویداد مشاهده جزئیات خروجی
        document.querySelectorAll('.view-export-details').forEach(button => {
            button.addEventListener('click', function() {
                const exportId = this.getAttribute('data-id');

                fetch('/Export/GetExportDetails', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ id: exportId })
                })
                .then(response => response.json())
                .then(data => {
                    // نمایش جزئیات خروجی در مودال
                    document.getElementById('export-details-content').innerHTML = `
                        <div class="row">
                            <div class="col-md-6">
                                <table class="table table-borderless">
                                    <tr>
                                        <th width="40%">شناسه:</th>
                                        <td>${data.id}</td>
                                    </tr>
                                    <tr>
                                        <th>نام فایل:</th>
                                        <td>${data.fileName}</td>
                                    </tr>
                                    <tr>
                                        <th>نوع خروجی:</th>
                                        <td>${data.exportType}</td>
                                    </tr>
                                    <tr>
                                        <th>تعداد رکوردها:</th>
                                        <td>${data.recordCount.toLocaleString()}</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <table class="table table-borderless">
                                    <tr>
                                        <th width="40%">تاریخ درخواست:</th>
                                        <td>${new Date(data.requestDate).toLocaleString('fa-IR')}</td>
                                    </tr>
                                    <tr>
                                        <th>تاریخ تکمیل:</th>
                                        <td>${data.completedDate ? new Date(data.completedDate).toLocaleString('fa-IR') : '---'}</td>
                                    </tr>
                                    <tr>
                                        <th>اندازه فایل:</th>
                                        <td>${data.fileSize || '---'}</td>
                                    </tr>
                                    <tr>
                                        <th>وضعیت:</th>
                                        <td>
                                            ${data.isCompleted ?
                                                '<span class="badge bg-success">آماده</span>' :
                                                data.isFailed ?
                                                '<span class="badge bg-danger">ناموفق</span>' :
                                                '<span class="badge bg-warning">در حال پردازش</span>'}
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        ${data.errorMessage ? `
                        <div class="mt-3">
                            <h6>پیام خطا:</h6>
                            <div class="alert alert-danger">
                                ${data.errorMessage}
                            </div>
                        </div>
                        ` : ''}
                        ${data.filters ? `
                        <div class="mt-3">
                            <h6>فیلترهای اعمال شده:</h6>
                            <div class="bg-light p-2 rounded">
                                <pre>${JSON.stringify(data.filters, null, 2)}</pre>
                            </div>
                        </div>
                        ` : ''}
                    `;

                    // نمایش مودال
                    $('#exportDetailsModal').modal('show');
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('خطا در دریافت جزئیات خروجی');
                });
            });
        });

        // رویداد لغو خروجی
        document.querySelectorAll('.cancel-export').forEach(button => {
            button.addEventListener('click', function() {
                const exportId = this.getAttribute('data-id');

                if (confirm('آیا از لغو این خروجی اطمینان دارید؟')) {
                    fetch('/Export/CancelExport', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify({ id: exportId })
                    })
                    .then(response => {
                        if (response.ok) {
                            // بارگذاری مجدد صفحه
                            window.location.reload();
                        } else {
                            throw new Error('خطا در لغو خروجی');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('خطا در لغو خروجی');
                    });
                }
            });
        });

        // رویداد به‌روزرسانی تاریخچه
        document.getElementById('refresh-history').addEventListener('click', function() {
            // نمایش لودینگ
            this.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> در حال به‌روزرسانی...';
            this.disabled = true;

            // بارگذاری مجدد صفحه
            setTimeout(() => {
                window.location.reload();
            }, 1000);
        });
    </script>
}