@using AnalysisCallUser._01_Domain.Core.Enums
@using System.Globalization
@model AnalysisCallUser._03_EndPoint.Models.ViewModels.Dashboard.DashboardViewModel

@{
    ViewData["Title"] = "داشبورد";
}

<!-- فرم مورد نیاز برای توکن امنیتی در درخواست‌های AJAX -->
<form id="anti-forgery-form">
    @Html.AntiForgeryToken()
</form>

<div class="dashboard-container">
    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
    {
        <div class="page-header">
            <h3>داشبورد</h3>
            <div class="page-actions">
                <button id="refresh-dashboard" class="btn btn-outline-primary">
                    <i class="fas fa-sync-alt"></i> به‌روزرسانی
                </button>
                <button id="clear-cache" class="btn btn-outline-warning">
                    <i class="fas fa-trash"></i> خالی کردن کش
                </button>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-phone"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.TotalCalls.ToString("N0")</h3>
                    <p>کل تماس‌ها</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon answered">
                    <i class="fas fa-phone-alt"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.AnsweredCalls.ToString("N0")</h3>
                    <p>تماس‌های پاسخ داده شده</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon duration">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.AverageCallDuration.ToString("F1")</h3>
                    <p>میانگین مدت تماس (ثانیه)</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon rate">
                    <i class="fas fa-percentage"></i>
                </div>
                <div class="stat-content">
                    <h3>@(Model.TotalCalls > 0 ? ((double)Model.AnsweredCalls / Model.TotalCalls * 100).ToString("F1") : "0")%</h3>
                    <p>نرخ پاسخگویی</p>
                </div>
            </div>
        </div>
    </div>
    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
    {
        <div class="row mt-4">
            <div class="col-md-8">
                <div class="chart-container">
                    <h4>فعالیت اخیر (۵ مورد آخر)</h4>
                    <canvas id="recent-activity-chart" width="400" height="200"></canvas>
                </div>
            </div>
            <div class="col-md-4">
                <div class="chart-container">
                    <h4>شهرهای برتر تماس با ایران</h4>
                    <canvas id="top-cities-chart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    }
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="table-container">
                <h4>اخیرین تماس‌ها</h4>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>شماره مبدأ</th>
                            <th>شماره مقصد</th>
                            <th>تاریخ و زمان</th>
                            <th>مدت (ثانیه)</th>
                            <th>کشور مبدأ</th>
                            <th>کشور مقصد</th>
                            <th>وضعیت</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var call in Model.RecentCalls)
                        {
                            <tr>
                                <td>@call.ANumber</td>
                                <td>@call.BNumber</td>
                                <td>
                                    @{
                                        var pc = new PersianCalendar();
                                        // تبدیل تاریخ میلادی به شمسی و فرمت‌دهی
                                        string persianDateTime = $"{pc.GetYear(call.AccountingTime)}/{pc.GetMonth(call.AccountingTime):D2}/{pc.GetDayOfMonth(call.AccountingTime):D2} {call.AccountingTime:HH:mm:ss}";
                                    }
                                    @persianDateTime
                                </td>
                                <td>@call.Length</td>
                                <td>@call.OriginCountryName</td>
                                <td>@call.DestCountryName</td>
                                <td>
                                    @if (call.Answer == CallAnswerStatus.Answered)
                                    {
                                        <span class="badge bg-success">پاسخ داده شده</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">پاسخ داده نشده</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/chartjs/dist/chart.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {

            const recentActivityCtx = document.getElementById('recent-activity-chart').getContext('2d');
            const recentActivityChart = new Chart(recentActivityCtx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.RecentActivity.Select(d => d.Label))),
                    datasets: [{
                        label: 'تعداد تماس‌ها',
                        data: @Html.Raw(Json.Serialize(Model.RecentActivity.Select(d => d.Value))),
                        backgroundColor: 'rgba(0, 173, 181, 0.2)',
                        borderColor: 'rgba(0, 173, 181, 1)',
                        borderWidth: 2,
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: 'rgba(0, 173, 181, 1)',
                        pointBorderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: { beginAtZero: true }
                    }
                }
            });

            const topCitiesCtx = document.getElementById('top-cities-chart').getContext('2d');
            const topCitiesChart = new Chart(topCitiesCtx, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.TopCities.Select(d => d.Label))),
                    datasets: [{
                        label: 'تعداد تماس‌ها',
                        data: @Html.Raw(Json.Serialize(Model.TopCities.Select(d => d.Value))),
                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: { beginAtZero: true }
                    },
                    plugins: { legend: { display: false } }
                }
            });

            document.getElementById('refresh-dashboard').addEventListener('click', function() {
                location.reload();
            });

            document.getElementById('clear-cache').addEventListener('click', async function() {

                const clearButton = document.getElementById('clear-cache');
                const originalText = clearButton.innerHTML;
                clearButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> در حال انجام...';
                clearButton.disabled = true;

                try {
                    const token = document.querySelector('#anti-forgery-form input[name="__RequestVerificationToken"]').value;

                    const response = await fetch('/Home/ClearCache', {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': token
                        }
                    });

                    if (response.ok) {
                        const result = await response.json();
                        alert(result.message);
                        location.reload();
                    } else {
                        alert('خطا در خالی کردن کش.');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('خطا در ارتباط با سرور.');
                } finally {
                    clearButton.innerHTML = originalText;
                    clearButton.disabled = false;
                }
            });
        });
    </script>
}